# Environment Configuration Template
# Copy this to .env and customize

# ===================================
# Gateway Service
# ===================================
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000
GATEWAY_DEBUG=true

# ===================================
# Auth Service
# ===================================
AUTH_HOST=0.0.0.0
AUTH_PORT=8001
AUTH_SECRET_KEY=change-this-in-production-use-strong-secret-key
AUTH_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================================
# Knowledge API
# ===================================
KNOWLEDGE_API_HOST=0.0.0.0
KNOWLEDGE_API_PORT=8002
KNOWLEDGE_API_DEBUG=false

# ===================================
# Frontend
# ===================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ===================================
# Perplexity API
# ===================================
PERPLEXITY_API_URL=https://www.perplexity.ai
PERPLEXITY_SESSION_TOKEN=

# ===================================
# Database (Future)
# ===================================
DATABASE_URL=postgresql://user:password@localhost:5432/perplexity
REDIS_URL=redis://localhost:6379

# ===================================
# Monitoring (Future)
# ===================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# ===================================
# Logging
# ===================================
LOG_LEVEL=INFO
LOG_FORMAT=json
